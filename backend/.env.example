# MarketMoves Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=MarketMoves
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Database Paths (relative to project root)
SQLITE_DB_PATH=./data/marketmoves.db
DUCKDB_PATH=./data/analytics.duckdb

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=marketmoves
NEO4J_DATABASE=neo4j

# Ollama/LLM Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DB_PATH=./data/vector_store
CHUNK_SIZE=512
CHUNK_OVERLAP=50
RAPTOR_LEVELS=3
TOP_K_RETRIEVAL=5

# Data Source API Keys
# SEC Edgar - Use your email as user agent (required by SEC)
SEC_EDGAR_USER_AGENT=MarketMoves your-email@example.com

# NewsAPI - Get free key from https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# Alpha Vantage (optional) - Get free key from https://www.alphavantage.co/
ALPHA_VANTAGE_KEY=your_alphavantage_key_here

# Data Ingestion Settings
MAX_COMPANIES_TO_TRACK=50
DATA_UPDATE_INTERVAL_HOURS=24
HISTORICAL_DATA_YEARS=5

# Risk Scoring Weights (must sum to 1.0)
RISK_WEIGHT_VOLATILITY=0.3
RISK_WEIGHT_LITIGATION=0.25
RISK_WEIGHT_SENTIMENT=0.2
RISK_WEIGHT_FINANCIAL_ANOMALY=0.15
RISK_WEIGHT_REGULATORY=0.1

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/marketmoves.log

# Redis (optional - for caching and Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
